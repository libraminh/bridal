section.cart-process.checkout
  .row
    .col-md-12
      ul.process-bar.text-center.list-unstyled
        li.pass-line
          a(href="#") 1
          p Shopping Cart
        li.process-line.index-process
          a(href="#") 2
          p Check Out
        li
          a(href="#") 3
          p Order Complete
          
