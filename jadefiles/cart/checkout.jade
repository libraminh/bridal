      .col-md-8
        .box-title
          h4.cart-title.text-uppercase Shipping DETAIL
        .row
          .col-md-6
            form
              .form-group
                input#firstbane.form-control(type='text', placeholder='First Name')

          .col-md-6
            form
              .form-group
                input#lastname.form-control(type='text', placeholder='Last Name')
                  
          .col-md-12
            form
              .form-group
                input#phone.form-control(type='tel', placeholder='Phone')
                  
          .col-md-12
            form
              .form-group
                input#address.form-control(type='text', placeholder='Address')
                  
          .col-md-6
            form
              .form-group
                select#city.selectpicker.form-control(title='City')
                  option Name
                  |   
                  option Tag
                  |   
                  option Price
                  
          .col-md-6
            form
              .form-group
                select#district.selectpicker.form-control(title='District')
                  option Name
                  |   
